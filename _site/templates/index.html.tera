{% extends "base" %}

{% block title %}
artiste-peintre
{% endblock title %}

{% block content %}
<div class="images gallery grid-x small-up-1 medium-up-2 large-up-3">
  {% for category in categories %}
    <div class="cell">
      <a href="/theme/{{ category.slug }}">
        <img src="/images/{{ category.thumbnail.id }}.{{ category.thumbnail.ext }}" width="900" height="900" />
        <span>{{ category.name }}</span>
      </a>
    </div>
  {% endfor %}
</div>
{% endblock content %}

