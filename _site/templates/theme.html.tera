{% extends "base" %}

{% block title %}
{{ category.name }}
{% endblock title %}

{% block content %}
<div class="images theme grid-x grid-padding-x grid-padding-y small-up-1 medium-up-2 large-up-3">
  {% for image in category.images %}
    <div class="cell">
      <a
        data-fslightbox="{{ category.slug }}"
        data-caption="<h4>{{ image.title }} - {{ image.year }}</h4>"
        href="/images/{{ image.id }}.{{ image.ext }}">
          <img src="/images/{{ image.id }}.{{ image.ext }}" />
          <span>{{ image.title }} - {{ image.year }}</span>
      </a>
    </div>
  {% endfor %}
  </div>
</div>
{% endblock content %}

